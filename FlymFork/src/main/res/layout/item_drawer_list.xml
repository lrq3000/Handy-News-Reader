<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/activatedBackgroundIndicator">

    <!-- icon -->
    <ImageView
        android:id="@android:id/icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_photo_size_select_actual"
        android:layout_margin="5dp"/>
    <ImageView
        android:id="@+id/icon_small"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_toRightOf="@android:id/icon"
        android:src="@drawable/ic_photo_size_select_actual"
        android:layout_centerVertical="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="5dp"/>

    <ImageView
        android:id="@+id/icon_expand"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/arrow_drop_down"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon_small"
        android:layout_margin="5dp"/>


    <!-- text -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/icon_expand"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:layout_toStartOf="@+id/layoutCount"
        android:layout_toLeftOf="@+id/layoutCount"
        android:layout_toEndOf="@id/icon_expand">

        <TextView
            android:id="@android:id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:text="text1"
            android:textColor="#EEEEEE"
            android:textIsSelectable="false"/>

        <LinearLayout
            android:id="@+id/layout_size"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:id="@+id/auto_refresh_icon"
                android:background="@drawable/ic_clock_gray" />
            <TextView
                android:id="@android:id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#EEEEEE"
                android:text="text2"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:textIsSelectable="false"
                android:layout_marginLeft="5dp" />
            <TextView
                android:id="@+id/imageSize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:alpha="0.5"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#EEEEEE"
                android:layout_marginStart="5dp"
                android:layout_marginRight="5dp"
                android:text="ImSize"
                android:textIsSelectable="false"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#EEEEEE"
            android:text="Tasks"
            android:textIsSelectable="false"/>

    </LinearLayout>

    <!-- unread counter -->
    <LinearLayout
        android:id="@+id/layoutCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/read_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:alpha="0.5"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:text="AC"
            android:textColor="#EEEEEE"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/unread_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceListItemSmall"
            android:text="UC"
            android:textColor="#EEEEEE"
            android:layout_marginEnd="12dp" />

    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="#515151"/>
</RelativeLayout>